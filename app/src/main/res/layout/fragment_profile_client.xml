<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".client.ProfileClient">



    <LinearLayout
        android:id="@+id/linear1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_height="250dp"
            android:background="@drawable/background_top_accueil">
            <ImageView
                android:id="@+id/photo_profil_client"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginTop="28dp"
                android:scaleType="center"
                android:src="@android:drawable/ic_menu_add"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/text_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Nom"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/nom_profil_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="8dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Email"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/email_profil_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="8dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Number"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/numero_profile_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="8dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Adresse"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_address_profile_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="8dp"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_enregister"
            style="@android:style/Widget.Button"
            android:layout_marginTop="15dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:text="Enregister"
            android:textColor="@color/white"
            android:textSize="26sp"
            />


    </LinearLayout>


</FrameLayout>